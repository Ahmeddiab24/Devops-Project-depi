@model libray2.Models.WorkspaceEntry

@{
    ViewData["Title"] = "Invoice for " + Model.Name;
}

<div class="card shadow-lg border-0 rounded-3">
    <div class="card-header bg-primary text-white py-4 rounded-top-3">
        <h3 class="mb-0"><i class="fas fa-receipt me-2"></i>Invoice for @Model.Name</h3>
    </div>
    <div class="card-body p-4">
        <div class="row mb-3">
            <div class="col-md-6">
                <p class="card-text"><strong>Name:</strong> @Model.Name</p>
                <p class="card-text"><strong>Room Type:</strong> @Model.RoomType</p>
            </div>
            <div class="col-md-6 text-md-end">
                <p class="card-text"><strong>Invoice Date:</strong> @DateTime.Now.ToString("g")</p>
            </div>
        </div>

        <hr>

        <div class="row mb-3">
            <div class="col-md-6">
                <p class="card-text"><strong>Entry Time:</strong> @Model.EntryTime.ToString("g")</p>
                <p class="card-text"><strong>Exit Time:</strong> @Model.ExitTime?.ToString("g")</p>
            </div>
            <div class="col-md-6">
                 @if (Model.ExitTime.HasValue)
                 {
                     var duration = Model.ExitTime.Value - Model.EntryTime;
                      <p class="card-text"><strong>Duration:</strong> @duration.ToString("hh\\:mm\\:ss")</p>
                 }
            </div>
        </div>

        <hr>

        <div class="row mb-3">
            <div class="col text-center">
                <h4>Total Amount: <span class="text-success">@Model.CalculatedEarnings.ToString("C") ريال</span></h4>
            </div>
        </div>

        <hr>

        <div class="text-center">
             <a asp-action="Entries" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i> Back to Entries</a>
        </div>

    </div>
</div> 