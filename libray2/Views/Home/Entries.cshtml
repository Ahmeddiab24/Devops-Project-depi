@model IEnumerable<libray2.Models.WorkspaceEntry>

@{
    ViewData["Title"] = "Workspace Entries";
    var filter = ViewBag.Filter as libray2.Models.EntryFilterModel ?? new libray2.Models.EntryFilterModel();
}

<div class="card shadow-lg border-0 rounded-3">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-4 rounded-top-3">
        <h3 class="mb-0"><i class="fas fa-list me-2"></i>Workspace Entries</h3>
        <div>
            @if (User.IsInRole("Admin"))
            {
                 <a asp-action="Statistics" class="btn btn-info me-2"><i class="fas fa-chart-bar me-1"></i>Statistics</a>
                 <a asp-action="AdminDashboard" class="btn btn-secondary me-2"><i class="fas fa-tachometer-alt me-1"></i>Dashboard</a>
            }
             <a asp-action="Index" class="btn btn-light"><i class="fas fa-plus-circle me-1"></i>New Entry</a>
        </div>
    </div>
    <div class="card-body p-4">
        @if (User.IsInRole("Admin"))
        {
            <form asp-action="Entries" method="get" class="mb-4 p-4 bg-light rounded-3">
                <h5 class="mb-4 text-primary"><i class="fas fa-filter me-2"></i>Filter Entries</h5>
                <div class="row g-4">
                    <div class="col-md-6 col-lg-3">
                        <label class="form-label">Name</label>
                        <input type="text" name="Name" value="@filter.Name" class="form-control form-control-lg" placeholder="Search by name">
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <label class="form-label">Room Type</label>
                        <select name="RoomType" class="form-select form-select-lg">
                            <option value="">All</option>
                            <option value="@RoomType.Private" selected="@(filter.RoomType == RoomType.Private)">Private</option>
                            <option value="@RoomType.Shared" selected="@(filter.RoomType == RoomType.Shared)">Shared</option>
                        </select>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <label class="form-label">Start Date</label>
                        <input type="date" name="StartDate" value="@(filter.StartDate?.ToString("yyyy-MM-dd"))" class="form-control form-control-lg">
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <label class="form-label">End Date</label>
                        <input type="date" name="EndDate" value="@(filter.EndDate?.ToString("yyyy-MM-dd"))" class="form-control form-control-lg">
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary me-2 btn-lg"><i class="fas fa-search me-1"></i>Filter</button>
                    <a asp-action="Entries" class="btn btn-secondary me-2 btn-lg"><i class="fas fa-sync-alt me-1"></i>Clear</a>
                    <a asp-action="ExportCsv" asp-all-route-data="@(new Dictionary<string, string> {
                        { "Name", filter.Name },
                        { "RoomType", filter.RoomType?.ToString() },
                        { "StartDate", filter.StartDate?.ToString("yyyy-MM-dd") },
                        { "EndDate", filter.EndDate?.ToString("yyyy-MM-dd") }
                    })" class="btn btn-success btn-lg"><i class="fas fa-file-csv me-1"></i>Export CSV</a>
                </div>
            </form>
        }

        <div class="table-responsive mt-4">
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Room Type</th>
                        <th>Entry Time</th>
                        <th>Exit Time</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Calculated Earnings</th>
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model)
                    {
                        <tr>
                            <td>@entry.Name</td>
                            <td>@entry.RoomType</td>
                            <td>@entry.EntryTime.ToString("g")</td>
                            <td>@entry.ExitTime?.ToString("g")</td>
                            @if (User.IsInRole("Admin"))
                            {
                                 <td>@(entry.ExitTime.HasValue ? entry.CalculatedEarnings.ToString("C") : "-")</td>
                                 <td>
                                     @if (!entry.ExitTime.HasValue)
                                     {
                                         <form asp-action="CompleteEntry" asp-route-id="@entry.Id" method="post" style="display:inline;">
                                             <button type="submit" class="btn btn-sm btn-success">
                                                 <i class="fas fa-dollar-sign"></i> Pay / Finish
                                             </button>
                                         </form>
                                     }
                                     else
                                     {
                                         <a asp-action="ShowInvoice" asp-route-id="@entry.Id" class="btn btn-sm btn-info">
                                             <i class="fas fa-receipt"></i> View Invoice
                                         </a>
                                     }
                                 </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 